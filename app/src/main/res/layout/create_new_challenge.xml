<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="327dp"
    android:layout_height="226dp"
    android:background="@drawable/bg_raduis"
    android:padding="5dp"

    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Create a new challenge"
        android:textColor="#456"
        android:textSize="20dp"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Would you like to create a new challenge for you and your friends, feel free to invite whoever you like."
        android:textColor="#456"
        android:textSize="14dp"
        android:textStyle="italic"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/close_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Cancel"
            android:textSize="14dp"
            android:width="80dp"
            android:height="44dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Next"
            android:textSize="14dp"
            android:width="80dp"
            android:height="44dp"
            android:onClick="ShowPopupNumberGuests"/>
    </LinearLayout>
</LinearLayout>