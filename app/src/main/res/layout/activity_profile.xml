<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="#8909A0">


    <TextView
            android:text="Workout summary"
            android:layout_width="434dp"
            android:layout_height="78dp" android:id="@+id/Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:background="#F0E2FA" android:gravity="center|start"
            tools:layout_editor_absoluteX="-2dp" app:layout_constraintBottom_toTopOf="@+id/totalSteps"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:padding="15dp"/>
    <TextView
            android:text="Time elapsed"
            android:textColor="#FFFFFF"
            android:layout_width="289dp"
            android:layout_height="46dp" android:id="@+id/totalSteps"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.529" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Total steps :"
            android:layout_width="222dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_height="wrap_content" android:id="@+id/totalCalories"
            app:layout_constraintTop_toBottomOf="@+id/totalSteps"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.177"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="145dp"
            android:layout_height="165dp" app:srcCompat="@mipmap/workout"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/Title" app:layout_constraintBottom_toTopOf="@+id/totalSteps"
            app:layout_constraintVertical_bias="0.647" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Check Recent workouts"
            android:layout_width="143dp"
            android:background="@drawable/button_curve"
            android:layout_height="47dp"
            android:id="@+id/recent_workouts" android:textSize="11sp"
            android:onClick="getWorkoutHistory"
            android:textColor="#FFFEFE" app:layout_constraintStart_toStartOf="@+id/Title"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.023"/>
</androidx.constraintlayout.widget.ConstraintLayout>