<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
     >


    <ImageView
            android:layout_width="256dp"
            android:layout_height="242dp" app:srcCompat="@drawable/ellipse"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="208dp" android:layout_marginStart="208dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOOVE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"
            app:layout_constraintVertical_bias="0.259" android:background="#00CA2D2D" android:textSize="30sp"
            android:textColor="#8913F0"
           />


    <com.google.android.gms.common.SignInButton
            android:layout_width="333dp"
            android:layout_height="60dp"
            android:textSize="22sp"
            android:id="@+id/google_signIn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"

            app:layout_constraintVertical_bias="0.201"
            app:layout_constraintHorizontal_bias="0.448">

    </com.google.android.gms.common.SignInButton>
    <com.facebook.login.widget.LoginButton
            android:id="@+id/face_login_button"
            android:layout_width="333dp"
            android:layout_height="293dp"

            app:layout_constraintTop_toBottomOf="@+id/google_signIn"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.095"
            app:layout_constraintHorizontal_bias="0.462"/>
    <TextView
            android:text="Add some fun to your daily jogging sessions"
            android:textColor="#9211F5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/google_signIn"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="182dp"
            android:layout_height="201dp" app:srcCompat="@drawable/ellipse"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/textView" android:layout_marginBottom="72dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>