<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_landing_page"
    tools:context=".fragments.LandingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_65sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_fitness_vector" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/land_page_title_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center_horizontal"
            android:text="@string/land_page_title_1"
            android:textColor="@color/on_secondary"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/land_page_title_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/land_page_title_2"
            android:textColor="@color/primary"
            android:textSize="@dimen/_27ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/land_page_title_1" />

        <View
            android:id="@+id/land_page_view_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_1ssp"
            android:layout_marginStart="@dimen/_115sdp"
            android:layout_marginLeft="@dimen/_115sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_115sdp"
            android:layout_marginRight="@dimen/_115sdp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/land_page_title_2" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/land_page_main_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/_3ssp"
            android:text="@string/land_page_main_text"
            android:textColor="@color/on_secondary"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/land_page_view_1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/land_page_get_started"
            android:layout_width="0dp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginStart="@dimen/_31sdp"
            android:layout_marginLeft="@dimen/_31sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_31sdp"
            android:layout_marginRight="@dimen/_31sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            android:text="@string/land_page_get_started"
            android:textColor="@color/on_primary"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            app:backgroundTint="@color/primary"
            app:layout_constraintBottom_toTopOf="@+id/land_page_notice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/land_page_main_text" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/land_page_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_63sdp"
            android:layout_marginLeft="@dimen/_63sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:gravity="center_horizontal"
            android:text="@string/land_page_notice"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/land_page_view_2"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/land_page_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_56sdp"
            android:layout_marginRight="@dimen/_56sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:text="@string/land_page_terms"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/land_page_view_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.32"
            app:layout_constraintStart_toEndOf="@+id/land_page_notice" />

        <View
            android:id="@+id/land_page_view_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/_2ssp"
            android:layout_marginStart="@dimen/_115sdp"
            android:layout_marginLeft="@dimen/_115sdp"
            android:layout_marginEnd="@dimen/_115sdp"
            android:layout_marginRight="@dimen/_115sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
