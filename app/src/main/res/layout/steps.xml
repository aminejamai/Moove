<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#8909A0"
>
    <TextView
            android:text="Time elapsed :"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="98dp" android:id="@+id/timer" android:background="#00FFFFFF"
            android:gravity="center"/>
    <TextView android:textColor="#FFFFFF"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Number of steps : 0" android:fontFamily="sans-serif-black" android:textSize="30sp"
    />
    <TextView android:id="@+id/count"
              android:textSize="36dp"
              android:textColor="@android:color/black"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/count2"
              android:textSize="36dp"
              android:textColor="@android:color/black"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/count3"
              android:textSize="36dp"
              android:textColor="@android:color/black"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
</LinearLayout>
